@{
    ViewBag.Title = "WebOpt Main";                  
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/resources/css/ext-all.css")"/>
    <script src="~/Scripts/RequireJS/require.js"></script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script src="~/Scripts/markerclusterer.js"></script>
    <script src="~/Scripts/ext-all-debug.js"></script>
    <script type="text/javascript">
        Ext.onReady(function () {
            require(["Scripts/App"], function (app) {})
        });
    </script>
    <style type="text/css">
        html
        {
            height: 100%;
        }

        body
        {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        #canvasNetworkEditor
        {
            width: 100%;
            height: 100%;
            position: relative;
            left: 0;
            top: 0;
        }
    </style>
}

<div id="nodes" class="x-hide-display">
    <p>Node1</p>
    <p>Node2</p>
    <p>Node3</p>
    <p>Node4</p>
</div>
<div id="bTypeEdges" class="x-hide-display">
    <p>BType1</p>
    <p>BType2</p>
    <p>BType3</p>
    <p>BType4</p>
</div>
<div id="atypeEdges" class="x-hide-display">
    <p>atypeEdge1</p>
    <p>atypeEdge2</p>
    <p>atypeEdge3</p>
    <p>atypeEdge4</p>
</div>
<div id="networkeditor" class="x-hide-display">
    <div id="canvasNetworkEditor"></div>
    <form method="POST">
        <div id="Upload" style="position: absolute; top: 0;"></div>
    </form>
</div>

<div id="Messages" class="x-hide-display">
    <p>Object Content here</p>
    <textarea id="log" style="width: 100%; height: 500px"></textarea>
</div>

<div id="propertyEditor" class="propertyEditorContainer" style="display: none">
    <div id="vertexEditor" class="propertyEditor">
        <div class="propertyEditorRow">
            <label for="vertexName">
                Name:</label>
            <input type="text" id="vertexName" />
            <br />

            <label for="vertexCoordinateX">
                Coordinate X:</label>
            <input type="text" id="vertexCoordinateX" />
            <br />

            <label for="vertexCoordinateY">
                Coordinate Y:</label>
            <input type="text" id="vertexCoordinateY" />
            <br />
        </div>
        <input type="button" value="Save" onclick="window.vertexEditor.save()" />
    </div>
    <div id="atypeEdgeEditor" class="propertyEditor">
        <label for="atypeEdgeName">
            Name:</label>
        <input type="text" id="atypeEdgeName" />
        <input type="button" value="Save" onclick="SaveatypeEdgeProperties()" />
    </div>
</div>

